{
  "name": "gulp-merge-json",
  "version": "2.1.2",
  "description": "A gulp plugin to merge JSON files into one file",
  "author": "Josh Swan <josh@disruptivelabs.io>",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshswan/gulp-merge-json"
  },
  "bugs": {
    "url": "https://github.com/joshswan/gulp-merge-json/issues"
  },
  "keywords": [
    "gulpplugin",
    "gulp",
    "json",
    "merge"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint index.js test/*.js",
    "prepare": "husky install",
    "release": "release-it",
    "test": "jest --coverage"
  },
  "dependencies": {
    "json5": "^2.2.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.mergewith": "^4.6.1",
    "plugin-error": "^2.0.1",
    "through": "^2.3.8",
    "vinyl": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.1",
    "@commitlint/config-conventional": "^19.0.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/gulp-util": "^3.0.41",
    "coveralls": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "gulp": "^4.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "release-it": "^17.1.1"
  },
  "jest-junit": {
    "outputDirectory": "./artifacts/jest",
    "outputName": "results.xml"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  }
}
