{
  "name": "gulp-merge-json",
  "version": "2.0.0",
  "description": "A gulp plugin to merge JSON files into one file",
  "author": "Josh Swan <josh@disruptivelabs.io>",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshswan/gulp-merge-json"
  },
  "bugs": {
    "url": "https://github.com/joshswan/gulp-merge-json/issues"
  },
  "keywords": [
    "gulpplugin",
    "gulp",
    "json",
    "merge"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint index.js test/*.js",
    "release": "release-it",
    "test": "jest --coverage"
  },
  "dependencies": {
    "json5": "^2.1.1",
    "lodash.mergewith": "^4.6.1",
    "plugin-error": "^1.0.1",
    "through": "^2.3.8",
    "vinyl": "^2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/gulp-util": "^3.0.31",
    "coveralls": "^3.0.9",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.10.0",
    "gulp": "^4.0.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "release-it": "^12.4.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest-junit": {
    "outputDirectory": "./artifacts/jest",
    "outputName": "results.xml"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s",
      "tagName": "v%s"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  }
}
